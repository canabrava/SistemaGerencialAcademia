@model Guid
@{
    ViewData["Title"] = "_informacoesPagamentoModal";
}

    <div class="modal-dialog  modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="informacoesPagamentoModalLabel">Informações de Pagamento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div id="_informacoesDePagamento_@Model">
                    
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Voltar</button>
            </div>
        </div>
    </div>

    <script>

        $('#informacoesPagamento_@Model').on('show.bs.modal', function(){
            BuscarInformacoesDePagamento('@Model')
        });

        function BuscarInformacoesDePagamento(id) {
              $.ajax(
              {
                type: "GET",
                url: '@Url.Action("BuscarInformacoesDePagamento", "Cliente")',
                data: {
                    id: id
                },
                success: function (result) {
                    $("#_informacoesDePagamento_" + id).html(result)

                }
              });
        }

    </script>